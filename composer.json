{
    "name": "stagerightlabs/bloom-stellar-quest",
    "description": "Examples demonstrating the use of Bloom to interact with the Stellar network",
    "type": "project",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Ryan Durham",
            "email": "ryan@stagerightlabs.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php-64bit": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-sodium": "*",
        "stagerightlabs/bloom": "dev-main",
        "stagerightlabs/phpxdr": "^0.0.15"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "scripts": {
        "format": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky yes"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "source",
        "sort-packages": true
    },
    "prefer-stable": true,
    "repositories": {
        "bloom": {
            "type": "path",
            "url": "../Bloom",
            "options": {
                "symlink": true
            }
        }
    }
}
